<h2>Create New Post</h2>
<section class="form-box">
  <form class="new-post-form">
    <div>
      <label for="title">Title</label>
      <input type="text" id="post-title" name="title" />
    </div>
    <div>
      <label for="url">URL</label>
      <input type="text" id="post-url" name="url" />
    </div>
    <div>
      <label for="description">Content</label>
      <input type="text" id="post-content" name="description" />
    </div>
    <button type="submit" class="btn" id="submit"><a href="/">Create</button>
  </form>
</section>

{{#if posts.length}}
  <h2>Your Posts</h2>
  <section class="form-box">
  <ol>
    {{#each posts as |post|}}
    <li>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      {{> post-info post}}
      
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/add-post.js"></script>